<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#121212"
    android:id="@+id/main">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Noterr App :)"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#BB86FC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <!-- Notes Button -->
    <Button
        android:id="@+id/buttonOpenNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Notes"
        android:textColor="#BB86FC"
        android:backgroundTint="#1F1B24"
        android:layout_below="@id/textViewWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Set Reminder Button (No Functionality Yet) -->
    <Button
        android:id="@+id/buttonSetReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Reminder"
        android:textColor="#BB86FC"
        android:backgroundTint="#1F1B24"
        android:layout_below="@id/buttonOpenNotes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>

</RelativeLayout>
